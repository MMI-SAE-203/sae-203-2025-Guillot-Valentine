---
const { ...film } = Astro.props;
console.log(film);
import Fleche from "../assets/icons/fleche.svg";
import { formatDate } from "../../backend/helpers.js";
---

<div
  class="border-2 border-orange1 bg-blanc pt-3 p-5 my-4 mx-4 rounded items-center grid lg:grid-cols-2"
>
  <div class="flex justify-center">
    <img
      class="w-150 h-auto lg:h-100 lg:w-auto"
      src={film.img}
      alt="Affiche du film"
    />
  </div>
  <div>
    <h3 class="py-5">{formatDate(film.date)}</h3>
    <h2>{film.titre}</h2>
    <p class="pt-5">
      <span class="font-bold underline">Genre :</span>
      {film.genre}
    </p>
    <p class="pt-2">
      <span class="font-bold underline">Lieu :</span>
      {film.lieu}
    </p>
    <p class="py-5">{film.synopsis}</p>
    <button
      class="flex gap-2 border border-orange1 text-gray uppercase py-4 px-4 mb-11 bg-blanc ml-auto mr-20"
    >
      <span class="mt-1">
        <Fleche />
      </span>
      <a
        class="text-gris text-xs font-semibold"
        href={`/programme_films/${film.id}`}
      >
        En savoir plus
      </a>
    </button>
  </div>
</div>
